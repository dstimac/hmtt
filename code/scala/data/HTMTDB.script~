CREATE SCHEMA PUBLIC AUTHORIZATION DBA
CREATE MEMORY TABLE SKILLLEVEL(ID INTEGER NOT NULL PRIMARY KEY,NAME VARCHAR(40) NOT NULL)
CREATE MEMORY TABLE SPECIALITY(ID INTEGER NOT NULL PRIMARY KEY,NAME VARCHAR(40) NOT NULL)
CREATE MEMORY TABLE PLAYER(ID INTEGER NOT NULL PRIMARY KEY,FIRSTNAME VARCHAR(40) NOT NULL,LASTNAME VARCHAR(40) NOT NULL,AGE INTEGER NOT NULL,AGEDAYS INTEGER NOT NULL,TSI INTEGER NOT NULL,FORM INTEGER NOT NULL,STAMINA INTEGER NOT NULL,EXPERIENCE INTEGER NOT NULL,LEADERSHIP INTEGER NOT NULL,SALARY INTEGER NOT NULL,SPECIALITY INTEGER NOT NULL,GOALKEEPING INTEGER NOT NULL,PLAYMAKING INTEGER NOT NULL,SCORING INTEGER NOT NULL,PASSING INTEGER NOT NULL,DEFENDING INTEGER NOT NULL,WINGER INTEGER NOT NULL,SETPIECES INTEGER NOT NULL,CONSTRAINT SYS_FK_50 FOREIGN KEY(FORM) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_51 FOREIGN KEY(STAMINA) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_52 FOREIGN KEY(EXPERIENCE) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_53 FOREIGN KEY(LEADERSHIP) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_54 FOREIGN KEY(GOALKEEPING) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_55 FOREIGN KEY(PLAYMAKING) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_56 FOREIGN KEY(SCORING) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_57 FOREIGN KEY(PASSING) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_58 FOREIGN KEY(DEFENDING) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_59 FOREIGN KEY(WINGER) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_60 FOREIGN KEY(SETPIECES) REFERENCES SKILLLEVEL(ID),CONSTRAINT SYS_FK_61 FOREIGN KEY(SPECIALITY) REFERENCES SPECIALITY(ID))
CREATE USER SA PASSWORD ""
GRANT DBA TO SA
SET WRITE_DELAY 10
